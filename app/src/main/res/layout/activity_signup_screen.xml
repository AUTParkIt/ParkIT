<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.aut.parkit.View.SignupScreen" android:background="@drawable/gradient">

    <TextView
            android:text="CREATE AUT PARKIT ACCOUNT"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/screenTitle" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.037"
            android:textSize="30dp" android:textAlignment="center" android:textColor="#DDEEEEEE"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstName"
            android:hint="FIRST NAME" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintVertical_bias="0.991" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/lastName" app:layout_constraintHorizontal_bias="0.77"/>

    <EditText
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastName"
            android:hint="LAST NAME"
            android:textSize="11sp" android:textColorHint="#DDEEEEEE"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/email" app:layout_constraintVertical_bias="0.991"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="EMAIL"
            android:textColorHint="#DDEEEEEE"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            android:textSize="11sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="320sp"
            android:layout_height="40sp"
            android:id="@+id/vehicleReg"
            android:hint="VEHICLE REGISTRATION"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            android:textSize="11sp"
            android:textColorHint="#DDEEEEEE"
            android:ems="10"
            android:gravity="center_vertical" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.52" android:layout_marginBottom="336dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password"
            android:hint="PASSWORD" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            app:layout_constraintBottom_toTopOf="@+id/confirmPassword"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/vehicleReg" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/confirmPassword"
            android:hint="CONFIRM PASSWORD" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:padding="@dimen/padding_regular"
            android:background="@drawable/custom_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginBottom="240dp"/>
    <CheckBox
            android:text="I agree with the Terms &amp; Conditions"
            android:onClick="ShowPopUp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/termsConditions"
            android:textSize="13sp"
            android:longClickable="true"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:alpha="0.75"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword"
            app:layout_constraintBottom_toTopOf="@+id/loggedIn"
            android:textColorLink="@android:color/background_light"/>
    <CheckBox
            android:text="Keep me logged in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loggedIn"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:buttonTint="@android:color/white"
            android:alpha="0.75"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/signUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Sign Up"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/signUp"
            android:backgroundTint="@android:color/white" android:textColor="@android:color/holo_orange_dark"
            android:background="@drawable/custom_button"
            android:textSize="15sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/goBack"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:text="Go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goBack"
            android:textColor="@android:color/white" android:backgroundTint="#00F36314" android:alpha="0.75"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.956" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:onClick="onClick"/>


</androidx.constraintlayout.widget.ConstraintLayout>