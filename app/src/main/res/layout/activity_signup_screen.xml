<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.SignupScreen" android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="-6dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_begin="76dp"/>

    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="    FIRST NAME" android:textColorHint="@android:color/white" android:textSize="10sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintVertical_bias="0.986"/>

    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="    LAST NAME"
            app:layout_constraintHorizontal_bias="0.897" app:layout_constraintVertical_bias="0.325"
            android:textSize="10sp" android:textColorHint="@android:color/white"
            android:background="@drawable/custom_button"/>

    <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginBottom="412dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="    EMAIL"
            app:layout_constraintHorizontal_bias="0.488" android:textColorHint="@android:color/white"
            android:background="@drawable/custom_button"
            android:textSize="10sp"
    />

    <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:hint="    PASSWORD" android:textColorHint="@android:color/white" android:textSize="10sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText7"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.996"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText7"
            android:hint="    CONFIRM PASSWORD" android:textColorHint="@android:color/white" android:textSize="10sp"
            android:background="@drawable/custom_button"
            android:layout_marginTop="376dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.566"/>
    <CheckBox
            android:text="I agree with the Terms &amp; Conditions"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/checkBox" android:textColor="@color/colorWhite"
            android:textColorHint="@android:color/white" android:textSize="12sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginTop="432dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
    <CheckBox
            android:text="Keep me logged in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2" android:textColor="@android:color/white"
            android:textSize="12sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="228dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.46"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:backgroundTint="@android:color/white" android:textColor="@android:color/holo_orange_dark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintVertical_bias="0.134" android:background="@drawable/custom_button"/>

    <Button
            android:text="Go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.469"
            android:textColor="@color/colorWhite" android:backgroundTint="#00F36314"/>
</androidx.constraintlayout.widget.ConstraintLayout>