<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.aut.parkit.View.SignupScreen" android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="31dp"/>
    <TextView
            android:text="CREATE AUT PARKIT ACCOUNT"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_View2" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.111"
            android:textSize="30dp" android:textAlignment="center" android:textColor="#DDEEEEEE"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="      FIRST NAME" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:background="@drawable/custom_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/edit_Text3" app:layout_constraintHorizontal_bias="0.754"/>

    <EditText
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_Text3"
            android:hint="      LAST NAME"
            android:textSize="11sp" android:textColorHint="#DDEEEEEE"
            android:background="@drawable/custom_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="44dp"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="      EMAIL"
            android:textColorHint="#DDEEEEEE"
            android:background="@drawable/custom_button"
            android:textSize="11sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText6"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:hint="      PASSWORD" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_Text7"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_Text7"
            android:hint="      CONFIRM PASSWORD" android:textColorHint="#DDEEEEEE" android:textSize="11sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.567" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text="I agree with the Terms &amp; Conditions"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/check_Box" android:textColor="@android:color/white"
            android:textSize="13sp"
            android:longClickable="true"
            android:textColorHint="@android:color/white"
            android:buttonTint="@android:color/background_light" android:alpha="0.75"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/check_Box2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_Text7"
            app:layout_constraintVertical_bias="1.0"/>
    <CheckBox
            android:text="Keep me logged in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_Box2" android:textColor="@android:color/white"
            android:textSize="13sp"
            android:buttonTint="@android:color/white" android:alpha="0.75"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Sign Up"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:backgroundTint="@android:color/white" android:textColor="@android:color/holo_orange_dark"
            android:background="@drawable/custom_button"
            android:textSize="15sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:text="Go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textColor="@android:color/white" android:backgroundTint="#00F36314" android:alpha="0.75"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.956" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="381dp"
                                                android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>