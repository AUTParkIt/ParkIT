<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.NotificationScreen">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="MY NOTIFICATIONS"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/expireTextView"
            android:layout_width="282dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:text="Be notified for when Parking Session has expired"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
            android:id="@+id/bexpireTextView"
            android:layout_width="282dp"
            android:layout_height="51dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="Be notified before Parking Session expires"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expireSwitch" />

    <Switch
            android:id="@+id/expireSwitch"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Off/On"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expireTextView" />

    <Switch
            android:id="@+id/expireSwitch2"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Off/On"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bexpireTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>