<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.NotificationScreen">

    <TextView
            android:id="@+id/expireTextView"
            android:layout_width="282dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            android:text="Be notified for when Parking Session has expired"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/bexpireTextView"
            android:layout_width="282dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="125dp"
            android:text="Be notified before Parking Session expires"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Switch
            android:id="@+id/expireSwitch"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="8dp"
            android:text="Off/On"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/expireTextView"
            app:layout_constraintTop_toTopOf="parent" />

    <Switch
            android:id="@+id/expireSwitch2"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="8dp"
            android:text="Off/On"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bexpireTextView"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>