<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.ViewVehicleTestActivity">

    <EditText
            android:id="@+id/numberPlate_editText_viewVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="Number Plate"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/findVehicle_button_viewVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Vehicle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberPlate_editText_viewVehicle" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <TextView
                android:id="@+id/numberPlate_textView_viewVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Plate"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/name_textView_viewVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Name"
                android:textSize="28sp" />

        <TextView
                android:id="@+id/ownerID_textView_viewVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OwnerID"
                android:textSize="28sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>