<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".View.LoginScreen"
        android:background="@drawable/gradient">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:layout_editor_absoluteY="-127dp"
                tools:layout_editor_absoluteX="206dp"
                android:id="@+id/scrollView"/>

    <EditText
            android:layout_width="326dp"
            android:layout_height="214dp"
            android:drawableTop="@drawable/ic_directions_car_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="@+id/scrollView" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.622" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmailAddress"
            android:padding="12dp"
            android:drawablePadding="12dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:hint="  EMAIL"
            android:textColorHint="#ddeeeeee"
            android:background="@drawable/roundededges"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="376dp"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/scrollView"
            app:layout_constraintHorizontal_bias="0.673"
            app:layout_constraintVertical_bias="0.497"/>

    <EditText
            android:layout_height="56dp"
            android:layout_width="329dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_Password"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="PASSWORD "
            android:textColorHint="#ddeeeeee"
            android:background="@drawable/roundededges"
            android:maxLines="1"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="376dp" android:textSize="15sp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.527" app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.666"
            app:layout_constraintTop_toTopOf="@+id/scrollView"/>

            <!--<View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f9d7db" tools:layout_conversion_absoluteHeight="1dp"
                    tools:layout_editor_absoluteY="401dp"
                    tools:layout_conversion_absoluteWidth="376dp" android:id="@+id/view2"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>-->

    <Button
            android:layout_width="141dp"
            android:layout_height="58dp"
            android:text="LOGIN"
            android:background="@drawable/whiterounded"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:padding="16dp"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="152dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.791"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep me logged in "
            android:textColor="#ddeeeeee"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="153dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/checkBox" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="124dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.844"/>

    <Button
            android:layout_width="145dp"
            android:layout_height="57dp"
            android:background="@drawable/whiterounded"
            android:text="SIGN UP"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            style="@style/TextAppearance.AppCompat.Body1"
            android:clickable="true"
            android:padding="16dp" tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="155dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.79" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.894"/>

    <TextView
            android:layout_width="153dp"
            android:layout_height="58dp"
            android:text="Forgot password? "
            android:textColor="#ddeeeeee"
            android:padding="16dp"
            android:clickable="true"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:layout_conversion_absoluteHeight="55dp"
            tools:layout_conversion_absoluteWidth="360dp"
            android:id="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/checkBox"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="168dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/scrollView"
            app:layout_constraintVertical_bias="0.652" app:layout_constraintHorizontal_bias="0.541"/>
    <TextView
            android:text="TextView"
            android:layout_width="281dp"
            android:layout_height="93dp"
            android:textColor="#ddeeeeee"
            android:id="@+id/textView2"
            tools:text="AUT PARKIT"
            android:textSize="49sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.374"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/scrollView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


