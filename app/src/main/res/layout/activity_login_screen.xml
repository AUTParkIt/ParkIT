<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.LoginScreen"
        android:background="@drawable/gradient">

    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="164dp"
            android:gravity="center"
            android:text="AUT PARKIT"
            android:textColor="#ddeeeeee"
            android:textSize="49sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextEmailAddress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279"
            tools:layout_editor_absoluteX="0dp"
            tools:text="AUT PARKIT" />

    <TextView
            android:id="@+id/TextView3"
            android:layout_width="242dp"
            android:layout_height="136dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:drawableTop="@drawable/ic_directions_car_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.81"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="292dp"
            android:background="@drawable/roundededges"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="  EMAIL"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColorHint="#ddeeeeee"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/editText_Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="376dp" />

    <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="153dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:padding="16dp"
            android:text="Forgot password? "
            android:textColor="#ddeeeeee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97"
            tools:layout_conversion_absoluteHeight="55dp"
            tools:layout_conversion_absoluteWidth="360dp" />

    <EditText
            android:id="@+id/editText_Password"
            android:layout_width="329dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="368dp"
            android:background="@drawable/roundededges"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="PASSWORD "
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#ddeeeeee"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="376dp" />

    <Button
            android:id="@+id/button"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="141dp"
            android:layout_height="58dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="448dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/whiterounded"
            android:clickable="true"
            android:padding="16dp"
            android:text="LOGIN"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.134"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="152dp" />

    <Button
            android:id="@+id/button2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/whiterounded"
            android:clickable="true"
            android:padding="16dp"
            android:text="SIGN UP"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.136"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="155dp" />

</androidx.constraintlayout.widget.ConstraintLayout>